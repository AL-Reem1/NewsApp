<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alreem00"
    tools:context=".SecondPage">

    <WebView
        android:id="@+id/wv_second_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_second_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Welcome To Our News App"
        android:textSize="32dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="27dp" />

    <TextView
        android:id="@+id/tv_second_page_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Select a topic that interests you."
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="82dp" />

    <Button
        android:id="@+id/btn_second_page_sport"
        android:layout_width="204dp"
        android:layout_height="56dp"
        android:text="Sport"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="144dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="204dp"
        android:layout_height="56dp"
        android:text="Cook"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="200dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="204dp"
        android:layout_height="56dp"
        android:text="Politics"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="256dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="204dp"
        android:layout_height="56dp"
        android:text="Health"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="191dp"
        tools:layout_editor_absoluteY="355dp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="204dp"
        android:layout_height="56dp"
        android:text="Arts"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="191dp"
        tools:layout_editor_absoluteY="418dp" />

    <Button
        android:id="@+id/button10"
        android:layout_width="204dp"
        android:layout_height="56dp"
        android:text="World"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="191dp"
        tools:layout_editor_absoluteY="474dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_star_big_on"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="70dp" />


</LinearLayout>